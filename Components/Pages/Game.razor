@page "/connectfour"
@rendermode InteractiveServer

<PageTitle>Connect Four - Play Now</PageTitle>

<div class="connect-four-container">
    <h1>ğŸ® Connect Four</h1>
    
    <div class="game-info">
        <div class="win-tracker">
            <h3>Win Tracker</h3>
            <div class="wins">
                <div class="player-wins">
                    <span class="red-indicator">ğŸ”´</span> Red: @gameState.Player1Wins
                </div>
                <div class="player-wins">
                    <span class="yellow-indicator">ğŸŸ¡</span> Yellow: @gameState.Player2Wins
                </div>
            </div>
        </div>
        
        @if (gameState.IsDraw)
        {
            <div class="draw-announcement">
                <h2>ğŸ¤ It's a Draw!</h2>
                <p>The board is full with no winner</p>
            </div>
        }
        else if (gameState.WinningPlayer != GamePiece.Empty)
        {
            <div class="winner-announcement">
                <h2>ğŸ‰ @gameState.WinningPlayer Wins! ğŸ‰</h2>
            </div>
        }
        else
        {
            <div class="current-player">
                Current Player: 
                <span class="@GetCurrentPlayerClass()">
                    @gameState.CurrentPlayer
                </span>
            </div>
        }
    </div>
    
    <Board CurrentGameState="gameState" OnPiecePlayed="HandlePiecePlayed" />
    
    <div class="game-controls">
        <button class="btn btn-primary" @onclick="ResetGame">
            ğŸ”„ New Game
        </button>
        <button class="btn btn-secondary" @onclick="ResetStats">
            ğŸ“Š Reset Win Stats
        </button>
    </div>
    
    <div class="move-history">
        <h3>ğŸ“œ Move History</h3>
        @if (gameState.MoveHistory.Count == 0)
        {
            <p class="no-moves">No moves yet. Click a column to play!</p>
        }
        else
        {
            <ol>
                @foreach (var move in gameState.MoveHistory)
                {
                    <li>@move</li>
                }
            </ol>
        }
    </div>
</div>

@code {
    private GameState gameState = new();
    
    /// <summary>
    /// Handles a piece being played in a column
    /// </summary>
    private void HandlePiecePlayed(int column)
    {
        gameState.PlayPiece(column);
    }
    
    /// <summary>
    /// Resets the board for a new game while preserving statistics
    /// </summary>
    private void ResetGame()
    {
        gameState.ResetBoard();
    }
    
    /// <summary>
    /// Resets all statistics and starts fresh
    /// </summary>
    private void ResetStats()
    {
        gameState = new GameState();
    }
    
    /// <summary>
    /// Gets the CSS class for the current player indicator
    /// </summary>
    private string GetCurrentPlayerClass()
    {
        return gameState.CurrentPlayer == GamePiece.Red ? "player-red" : "player-yellow";
    }
}
